{{#if addNewComment}}
<h2>New Comment</h2>
<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{input value=name id="name"}}
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    {{textarea value=content id="content"}}
  </div>
  <button class="btn btn-default btn-lg" {{action 'saveComment'}}>Save</button>
</form>
{{else}}
<button class="btn btn-default btn-lg" {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
