<h3>New Post</h3>
<div>
  <div class="form-group">
        {{input value=title id="title" placeholder="Title"}}
      </div>

      <div class="form-group">
        {{input value=date id="date" placeholder="Date"}}
      </div>

      <div class="form-group">
        {{input value=image id="image" placeholder="Image"}}
      </div>

      <div class="form-group">
        {{textarea value=body id="body" placeholder="Body"}}
      </div>

      <div class="form-group">
        {{textarea value=introduction id="introduction" placeholder="introduction"}}
      </div>

      <button class="btn btn-default btn-lg" {{action 'save'}}>Save</button>

</div>
