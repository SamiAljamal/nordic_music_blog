{{#if updateBlogpostForm}}
  <h4>Update {{blogpost.title}}</h4>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" placeholder=blogpost.title}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" placeholder=blogpost.date}}
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image" placeholder=blogpost.image}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{textarea value=body id="body" placeholder=blogpost.body}}
    </div>

    <div class="form-group">
      <label for="introduction">Introduction</label>
      {{textarea value=introduction id="introduction" placeholder=blogpost.introduction}}
    </div>
    <button class="btn btn-default btn-lg" {{action 'update' blogpost}}>Save</button>
  </form>
  {{else}}
    <button class="btn btn-default btn-lg" {{action 'updateBlogpostForm'}}>Update</button>
  {{/if}}
